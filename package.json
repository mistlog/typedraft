{
    "name": "typedraft",
    "version": "0.1.7",
    "description": "TypeDraft is a superset of typescript with built-in support for DSL extension and literate programming.",
    "keywords": [
        "literate programming",
        "dsl",
        "transcriber",
        "literator",
        "compiler",
        "typescript",
        "javascript"
    ],
    "bin": {
        "td": "dist/cli/cli.js"
    },
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mistlog/typedraft"
    },
    "homepage": "https://github.com/mistlog/typedraft",
    "scripts": {
        "pretest": "npm run transcribe",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "prebuild":"npm run clean:dist",
        "build": "npm run transcribe && tsc",
        "postbuild":"npm run clean:ts && npm run doc",
        "dev": "concurrently \"npm run transcribe:watch\" \"npm run doc:watch\"",
        "doc": "sv ./src",
        "doc:watch": "sv ./src -w",
        "transcribe": "td ./src",
        "transcribe:watch": "td ./src -w",
        "release": "npm run build && npm pack",
        "clean:ts": "ts-node ./script/clean-ts.ts",
        "clean:dist": "ts-node ./script/clean-dist.ts"
    },
    "author": "mistlog",
    "license": "MIT",
    "dependencies": {
        "@babel/core": "7.6.2",
        "commander": "^4.0.1",
        "filewalker": "^0.1.3",
        "fs-extra": "^8.1.0",
        "node-watch": "^0.6.3",
        "toposort": "2.0.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.0.1",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.12.14",
        "@types/toposort": "2.0.3",
        "concurrently": "^5.0.2",
        "jest": "^24.9.0",
        "source-view": "^0.0.5",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "typedraft": "^0.1.5",
        "typescript": "^3.6.2"
    }
}
